pipeline{
    agent any
    environment {
        REPO_URL= 'https://github.com/devopsPRO27/Docker-exercise-3'
        IMAGE_NAME= 'resume'
        TAG= 'V1.${BUILD_NUMBER}'
        CONTAINER_NAME= 'sorry'
        REGISTRY= 'DockerHub'
        ACCOUNT_NAME= 'hothaifaz'
        NEW_IMAGE_NAME= 'reponame+'
    }
    stages{
        stage("clone"){
            steps{
                sh 'git clone ${REPO_URL}'
                sh 'pwd'
                sh 'find .'
            }
        
        }
        stage("build"){
            steps{
                dir('Docker-exercise-3/ResumeMaker/'){
                    sh 'pwd'
                }
            }
        
        }
        stage("test"){
            steps{
                echo "========executing A========"
            }
        
        }
        stage("push"){
            steps{
                echo "========executing A========"
            }
        
        }
    }
    post{
        always{
            echo "========always========"
        }
        success{
            echo "========pipeline executed successfully ========"
        }
        failure{
            echo "========pipeline execution failed========"
        }
    }
}