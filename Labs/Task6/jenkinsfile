pipeline{
    agent any
    environment {
        IMAGE_NAME='myhttpd'
        VERSION = 'v1.0.0'
    }
    stages{
        stage("Docker-Verify"){
            steps{
               sh 'docker --version'
            }
        }
        stage("git-Verify"){
            steps{
               sh 'git --version'
            }
        }
        stage("docker-build"){
            steps{
               sh 'docker build -t ${IMAGE_NAME}:${VERSION} .'
            }
        }
    }
  
}